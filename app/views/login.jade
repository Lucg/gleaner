doctype html
html
    head(lang="en")
        title GLEANER Login
        meta(http-equiv="content-type", content="text/html; charset=UTF-8")
        meta(name="description", content="")
        meta(name="keywords", content="")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0;")
        include header/styles
    body
        .container(style='margin-top: 30px;')
        .col-md-4.col-md-offset-4
            h1 GLEANER
            .panel.panel-default
              .panel-heading
                h3.panel-title
                  strong Sign in
              .panel-body
                form(role='form',method="post",action="/login")
                  .form-group
                    label(for='exampleInputEmail1') Username
                    input#exampleInputEmail1.form-control(type='text', style='border-radius: 0px;', placeholder='Enter user', name="user")
                  .form-group
                    label(for='exampleInputPassword1') Password
                    input#exampleInputPassword1.form-control(type='password', style='border-radius: 0px;', placeholder='Password', name="password")
                  button.btn.btn-sm.btn-default(type='submit') Sign in
        include footer/scripts
